<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC">

    <!-- ENCABEZADO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <LinearLayout android:id="@+id/btn_volver_contenedor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical"
            android:clickable="true" android:focusable="true" android:padding="4dp">
            <ImageView android:layout_width="22dp" android:layout_height="22dp"
                android:src="@android:drawable/ic_media_previous" app:tint="#FF5722"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Servicios Disponibles"
            android:textColor="#111827"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView android:layout_width="22dp" android:layout_height="22dp"
            android:src="@android:drawable/ic_menu_search" app:tint="#FF5722"/>
    </LinearLayout>

    <!-- BARRA DE BÚSQUEDA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <EditText
            android:id="@+id/editBusqueda"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input_light"
            android:paddingHorizontal="16dp"
            android:hint="¿Qué estás buscando?"
            android:textColor="#111827"
            android:textColorHint="#9CA3AF"
            android:textSize="14sp"
            android:inputType="text"
            android:layout_marginBottom="10dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView android:layout_width="wrap_content" android:layout_height="36dp"
                    android:gravity="center" android:text="Todos"
                    android:textColor="#FFFFFF" android:textSize="12sp" android:textStyle="bold"
                    android:background="#FF5722" android:paddingHorizontal="14dp"
                    android:layout_marginEnd="8dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="36dp"
                    android:gravity="center" android:text="Tecnología"
                    android:textColor="#64748B" android:textSize="12sp"
                    android:background="@drawable/bg_input_light" android:paddingHorizontal="14dp"
                    android:layout_marginEnd="8dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="36dp"
                    android:gravity="center" android:text="Construcción"
                    android:textColor="#64748B" android:textSize="12sp"
                    android:background="@drawable/bg_input_light" android:paddingHorizontal="14dp"
                    android:layout_marginEnd="8dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="36dp"
                    android:gravity="center" android:text="Hogar"
                    android:textColor="#64748B" android:textSize="12sp"
                    android:background="@drawable/bg_input_light" android:paddingHorizontal="14dp"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- LISTA DE TRABAJOS -->
    <ListView
        android:id="@+id/list_trabajos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:padding="12dp"/>

    <!-- BARRA NAVEGACIÓN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="12dp">

        <LinearLayout android:id="@+id/nav_inicio" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:orientation="vertical"
            android:gravity="center" android:clickable="true" android:focusable="true">
            <ImageView android:layout_width="22dp" android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_compass" app:tint="#94A3B8"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Inicio" android:textSize="10sp" android:textColor="#94A3B8"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/nav_buscar" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:orientation="vertical"
            android:gravity="center" android:clickable="true" android:focusable="true">
            <ImageView android:layout_width="22dp" android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_search" app:tint="#FF5722"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Buscar" android:textSize="10sp" android:textColor="#FF5722"
                android:textStyle="bold" android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/nav_publicaciones" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:orientation="vertical"
            android:gravity="center" android:clickable="true" android:focusable="true">
            <ImageView android:layout_width="22dp" android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_agenda" app:tint="#94A3B8"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Mis Trabajos" android:textSize="10sp" android:textColor="#94A3B8"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/nav_chat" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:orientation="vertical"
            android:gravity="center" android:clickable="true" android:focusable="true">
            <ImageView android:layout_width="22dp" android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_send" app:tint="#94A3B8"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Chat" android:textSize="10sp" android:textColor="#94A3B8"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/nav_perfil" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:orientation="vertical"
            android:gravity="center" android:clickable="true" android:focusable="true">
            <ImageView android:layout_width="22dp" android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_myplaces" app:tint="#94A3B8"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Perfil" android:textSize="10sp" android:textColor="#94A3B8"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>