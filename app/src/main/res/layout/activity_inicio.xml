<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".Inicio">

    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/nav_inicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/inicio"
                app:tint="#FF6A00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textSize="10sp"
                android:textColor="#FF6A00"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_buscar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/buscarr"
                app:tint="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:textSize="10sp"
                android:textColor="#AAAAAA"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_publicaciones"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/publicaciones"
                app:tint="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publicaciones"
                android:textSize="10sp"
                android:textColor="#AAAAAA"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/chat"
                app:tint="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="10sp"
                android:textColor="#AAAAAA"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_perfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/perfil"
                app:tint="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="10sp"
                android:textColor="#AAAAAA"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF7C1A"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/gaex"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Hola, User" android:textColor="#FFFFFF" android:textSize="20sp" android:textStyle="bold" android:layout_marginStart="12dp" />
                    <ImageView android:id="@+id/noti_icon" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/notificacion" app:tint="#FFFFFF" android:clickable="true" android:focusable="true" />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bd_rounded"
                    android:drawableStart="@drawable/buscar1"
                    android:drawablePadding="8dp"
                    android:hint="¿Qué servicio necesitas?"
                    android:paddingStart="16dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:text="¿Qué quieres hacer hoy?" android:textColor="#333333" android:textSize="18sp" android:textStyle="bold" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingHorizontal="16dp" android:layout_marginBottom="20dp">
                <androidx.cardview.widget.CardView android:id="@+id/btn_publicar" android:layout_width="0dp" android:layout_height="140dp" android:layout_weight="1" android:layout_marginEnd="8dp" app:cardBackgroundColor="#FF7C1A" app:cardCornerRadius="12dp" android:clickable="true" android:focusable="true">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/maleta" app:tint="#FFFFFF"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Publicar empleo" android:textColor="#FFFFFF" android:textStyle="bold" android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView android:id="@+id/btn_trabajar" android:layout_width="0dp" android:layout_height="140dp" android:layout_weight="1" android:layout_marginStart="8dp" app:cardBackgroundColor="#4CAF50" app:cardCornerRadius="12dp" android:clickable="true" android:focusable="true">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/buscar" app:tint="#FFFFFF"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Trabajar" android:textColor="#FFFFFF" android:textStyle="bold" android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="16dp" android:text="Acciones Rápidas" android:textColor="#333333" android:textSize="18sp" android:textStyle="bold" />
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp">
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                    <androidx.cardview.widget.CardView android:layout_width="50dp" android:layout_height="50dp" app:cardBackgroundColor="#FF7C1A" app:cardCornerRadius="25dp"><ImageView android:layout_width="26dp" android:layout_height="26dp" android:layout_gravity="center" android:src="@drawable/alarma" app:tint="#FFFFFF"/></androidx.cardview.widget.CardView>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Urgentes" android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                    <androidx.cardview.widget.CardView android:layout_width="50dp" android:layout_height="50dp" app:cardBackgroundColor="#FF6A00" app:cardCornerRadius="25dp"><ImageView android:layout_width="26dp" android:layout_height="26dp" android:layout_gravity="center" android:src="@drawable/estrella" app:tint="#FFFFFF"/></androidx.cardview.widget.CardView>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Talento" android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                    <androidx.cardview.widget.CardView android:layout_width="50dp" android:layout_height="50dp" app:cardBackgroundColor="#FF7C1A" app:cardCornerRadius="25dp"><ImageView android:layout_width="26dp" android:layout_height="26dp" android:layout_gravity="center" android:src="@drawable/caja" app:tint="#FFFFFF"/></androidx.cardview.widget.CardView>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mis tareas" android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                    <androidx.cardview.widget.CardView android:layout_width="50dp" android:layout_height="50dp" app:cardBackgroundColor="#FF6A00" app:cardCornerRadius="25dp"><ImageView android:layout_width="26dp" android:layout_height="26dp" android:layout_gravity="center" android:src="@drawable/lupa" app:tint="#FFFFFF"/></androidx.cardview.widget.CardView>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Buscar" android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="16dp" android:text="Servicios Principales" android:textColor="#333333" android:textSize="18sp" android:textStyle="bold" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingHorizontal="16dp" android:paddingTop="8dp">
                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="5dp" app:cardCornerRadius="12dp" app:cardElevation="4dp"><LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp"><ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/piaggio"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Piaggio" android:textStyle="bold"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$20.000" android:textColor="#4CAF50"/></LinearLayout></androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="5dp" app:cardCornerRadius="12dp" app:cardElevation="4dp"><LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp"><ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/jardineria"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Jardinería" android:textStyle="bold"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$15.000" android:textColor="#4CAF50"/></LinearLayout></androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingHorizontal="16dp">
                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="5dp" app:cardCornerRadius="12dp" app:cardElevation="4dp"><LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp"><ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/mototaxi"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mototaxi" android:textStyle="bold"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$10.000" android:textColor="#4CAF50"/></LinearLayout></androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="5dp" app:cardCornerRadius="12dp" app:cardElevation="4dp"><LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp"><ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/plomero"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Plomero" android:textStyle="bold"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$35.000" android:textColor="#4CAF50"/></LinearLayout></androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingHorizontal="16dp">
                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="5dp" app:cardCornerRadius="12dp" app:cardElevation="4dp"><LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp"><ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/gruas"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gruas" android:textStyle="bold"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$80.000" android:textColor="#4CAF50"/></LinearLayout></androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="5dp" app:cardCornerRadius="12dp" app:cardElevation="4dp"><LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="12dp"><ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/pintor"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pintor" android:textStyle="bold"/><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$30.000" android:textColor="#4CAF50"/></LinearLayout></androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="#FF7C1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp">
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2.5M+" android:textColor="#FFFFFF" android:textSize="22sp" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Publicaciones" android:textColor="#FFFFFF" android:textSize="10sp" />
                    </LinearLayout>
                    <View android:layout_width="1dp" android:layout_height="40dp" android:background="#77FFFFFF" />
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="850K+" android:textColor="#FFFFFF" android:textSize="22sp" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Candidatos" android:textColor="#FFFFFF" android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View android:layout_width="match_parent" android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>