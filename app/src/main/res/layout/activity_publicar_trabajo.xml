<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC">

    <!-- ENCABEZADO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp">

        <ImageView android:id="@+id/btnBack"
            android:layout_width="36dp" android:layout_height="36dp"
            android:src="@android:drawable/ic_media_previous"
            app:tint="#FF5722" android:clickable="true" android:focusable="true"
            android:padding="6dp" android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Publicar Servicio"
            android:textColor="#111827"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView android:text="Información del Servicio"
                        android:textStyle="bold" android:textSize="18sp"
                        android:textColor="#111827"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="Completa los detalles para publicar tu servicio"
                        android:textSize="12sp" android:textColor="#64748B"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <!-- Título -->
                    <TextView android:text="Título del servicio *" android:textColor="#374151"
                        android:textSize="13sp" android:textStyle="bold"
                        android:layout_marginBottom="6dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/editTitulo"
                        android:layout_width="match_parent" android:layout_height="52dp"
                        android:hint="Ej: Diseño de logo profesional"
                        android:textColor="#111827" android:textColorHint="#9CA3AF"
                        android:background="@drawable/bg_input_light"
                        android:paddingHorizontal="16dp" android:textSize="14sp"
                        android:layout_marginBottom="14dp"/>

                    <!-- Descripción -->
                    <TextView android:text="Descripción" android:textColor="#374151"
                        android:textSize="13sp" android:textStyle="bold"
                        android:layout_marginBottom="6dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/editDescripcion"
                        android:layout_width="match_parent" android:layout_height="100dp"
                        android:hint="Describe tu servicio con detalle..."
                        android:textColor="#111827" android:textColorHint="#9CA3AF"
                        android:background="@drawable/bg_input_light"
                        android:paddingHorizontal="16dp" android:paddingVertical="12dp"
                        android:textSize="14sp" android:gravity="top"
                        android:inputType="textMultiLine"
                        android:layout_marginBottom="14dp"/>

                    <!-- Presupuesto / Modalidad -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal" android:layout_marginBottom="14dp">
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical"
                            android:layout_marginEnd="8dp">
                            <TextView android:text="Presupuesto (COP)" android:textColor="#374151"
                                android:textSize="13sp" android:textStyle="bold"
                                android:layout_marginBottom="6dp"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <EditText android:id="@+id/editPresupuesto"
                                android:layout_width="match_parent" android:layout_height="52dp"
                                android:hint="0" android:inputType="numberDecimal"
                                android:textColor="#111827" android:textColorHint="#9CA3AF"
                                android:background="@drawable/bg_input_light"
                                android:paddingHorizontal="12dp" android:textSize="14sp"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical"
                            android:layout_marginStart="8dp">
                            <TextView android:text="Modalidad" android:textColor="#374151"
                                android:textSize="13sp" android:textStyle="bold"
                                android:layout_marginBottom="6dp"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <EditText android:id="@+id/editModalidad"
                                android:layout_width="match_parent" android:layout_height="52dp"
                                android:hint="Remoto / Presencial"
                                android:textColor="#111827" android:textColorHint="#9CA3AF"
                                android:background="@drawable/bg_input_light"
                                android:paddingHorizontal="12dp" android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Categoría -->
                    <TextView android:text="Categoría" android:textColor="#374151"
                        android:textSize="13sp" android:textStyle="bold"
                        android:layout_marginBottom="6dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spinnerCategorias"
                        android:layout_width="match_parent" android:layout_height="52dp"
                        android:background="@drawable/bg_input_light"
                        android:layout_marginBottom="24dp"/>

                    <!-- Botón Publicar -->
                    <Button
                        android:id="@+id/btnPublicarServicioFinal"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="✓ Publicar Servicio"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- BARRA NAVEGACIÓN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="12dp">

        <LinearLayout android:id="@+id/nav_inicio" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:orientation="vertical"
            android:gravity="center" android:clickable="true" android:focusable="true">
            <ImageView android:layout_width="22dp" android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_compass" app:tint="#94A3B8"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Inicio" android:textSize="10sp" android:textColor="#94A3B8"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/nav_buscar" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:orientation="vertical"
            android:gravity="center" android:clickable="true" android:focusable="true">
            <ImageView android:layout_width="22dp" android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_search" app:tint="#94A3B8"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Buscar" android:textSize="10sp" android:textColor="#94A3B8"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/nav_perfil" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="match_parent" android:orientation="vertical"
            android:gravity="center" android:clickable="true" android:focusable="true">
            <ImageView android:layout_width="22dp" android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_myplaces" app:tint="#94A3B8"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Perfil" android:textSize="10sp" android:textColor="#94A3B8"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>