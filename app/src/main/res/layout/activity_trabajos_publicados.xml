<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/barra_inferior"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#2E5BFF"
            android:padding="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/flecha"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Mis Trabajos Publicados"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/fondo_tarjeta_stats"
                    android:backgroundTint="#33FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="22sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trabajos"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:layout_margin="5dp"
                    android:background="@drawable/fondo_tarjeta_stats" android:backgroundTint="#33FFFFFF"
                    android:gravity="center" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textColor="#FFFFFF" android:textSize="22sp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Postulados" android:textColor="#FFFFFF" android:textSize="11sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp" android:layout_height="80dp" android:layout_weight="1" android:layout_margin="5dp"
                    android:background="@drawable/fondo_tarjeta_stats" android:backgroundTint="#33FFFFFF"
                    android:gravity="center" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="★ 4.8" android:textColor="#FFFFFF" android:textSize="20sp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Valoración" android:textColor="#FFFFFF" android:textSize="11sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <Button
                android:layout_width="0dp" android:layout_height="55dp" android:layout_weight="1" android:layout_marginEnd="10dp"
                android:text="+ Publicar Trabajo" android:backgroundTint="#2E5BFF" android:textAllCaps="false" android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/search_bg"
            android:elevation="2dp"
            android:padding="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Activo"
                android:background="@drawable/anillo_azul"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Completado"
                android:gravity="center"
                android:textColor="#8E8E93" />
            <TextView android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cancelado"
                android:gravity="center"
                android:textColor="#8E8E93" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_input_add"
                android:background="@drawable/badge_azul"
                android:backgroundTint="#F0F4FF"
                android:padding="15dp"
                app:tint="#2E5BFF" />

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="No tienes trabajos publicados" android:textStyle="bold"
                android:textSize="18sp" android:layout_marginTop="20dp" android:textColor="#1A1A1A" />

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Publica tu primer trabajo para encontrar trabajadores"
                android:textColor="#8E8E93" android:layout_marginTop="8dp" android:gravity="center" />

            <TextView
                android:id="@+id/btn_publicar_central"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"

                android:elevation="4dp"
                android:gravity="center"
                android:text="Publicar Trabajo"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/barra_inferior"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:orientation="horizontal">

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/hogar" android:alpha="0.4" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Inicio" android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/buscarr" android:alpha="0.4" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Buscar" android:textSize="10sp" />
        </LinearLayout>

        <RelativeLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="26dp" android:layout_height="26dp" android:src="@drawable/urgente" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Urgente" android:textSize="10sp"  />
            </LinearLayout>
            <TextView android:layout_width="16dp" android:layout_height="16dp" android:background="@drawable/badge_azul" android:backgroundTint="#FF3B30" android:text="2" android:textColor="#FFFFFF" android:gravity="center" android:textSize="8sp" android:layout_centerHorizontal="true" android:layout_marginTop="8dp" android:layout_marginStart="14dp" />
        </RelativeLayout>

        <RelativeLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/chat" android:alpha="0.4" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chat" android:textSize="10sp" />
            </LinearLayout>
            <TextView android:layout_width="16dp" android:layout_height="16dp" android:background="@drawable/badge_azul" android:text="3" android:textColor="#FFFFFF" android:gravity="center" android:textSize="8sp" android:layout_centerHorizontal="true" android:layout_marginTop="8dp" android:layout_marginStart="14dp" />
        </RelativeLayout>

        <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/perfil"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Perfil" android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>