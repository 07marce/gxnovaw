                        android:inputType="phone"
                        android:background="@drawable/bg_input_light"
                        android:paddingHorizontal="16dp"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Ciudad / PaÃ­s -->
