                    android:background="#FF5722" />
            </LinearLayout>

            <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical">
                <TextView android:id="@+id/tabRegister"
                    android:layout_width="match_parent" android:layout_height="44dp"
                    android:gravity="center" android:text="Registrarse"
                    android:textColor="#64748B" android:textSize="14sp"/>
                <View android:id="@+id/indicatorRegister"
                    android:layout_width="match_parent" android:layout_height="3dp"
                    android:background="#E2E8F0" android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>

