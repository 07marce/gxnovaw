                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <EditText android:id="@+id/regPais"
                                android:layout_width="match_parent" android:layout_height="52dp"
                                android:hint="PaÃ­s" android:textColor="#111827"
                                android:textColorHint="#9CA3AF"
                                android:background="@drawable/bg_input_light"
                                android:paddingHorizontal="10dp" android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Â¿QuÃ© buscas? -->
