                            android:layout_alignParentEnd="true" android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="#FF5722"/>
                    </RelativeLayout>

                    <RelativeLayout android:id="@+id/area_selfie"
                        android:layout_width="match_parent" android:layout_height="52dp"
                        android:background="@drawable/bg_input_light"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="16dp">
                        <TextView android:id="@+id/txt_nombre_selfie"
                            android:layout_width="wrap_content" android:layout_height="match_parent"
                            android:text="ðŸ¤³ Selfie *"
                            android:gravity="center_vertical" android:textColor="#64748B"
                            android:textSize="13sp"/>
                        <ImageView android:layout_width="22dp" android:layout_height="22dp"
                            android:layout_alignParentEnd="true" android:layout_centerVertical="true"
                            android:src="@android:drawable/ic_menu_camera"
                            app:tint="#FF5722"/>
                    </RelativeLayout>

                    <CheckBox android:id="@+id/checkTerms"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Acepto los tÃ©rminos y condiciones"
                        android:textColor="#374151" android:textSize="13sp"
                        android:buttonTint="#FF5722"/>

                    <Button android:id="@+id/btnRegister"
                        android:layout_width="match_parent" android:layout_height="52dp"
                        android:text="Crear cuenta"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Â© 2026 GXNOVA - Todos los derechos reservados"
