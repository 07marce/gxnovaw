                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <Spinner android:id="@+id/spinnerBusqueda"
                        android:layout_width="match_parent" android:layout_height="52dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_input_light"/>

                    <!-- ContraseÃ±a -->
                    <TextView android:text="ContraseÃ±a" android:textColor="#374151"
                        android:textSize="13sp" android:textStyle="bold"
                        android:layout_marginBottom="6dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#FF5722"
                        app:hintEnabled="false">
                        <EditText android:id="@+id/regPass"
                            android:layout_width="match_parent" android:layout_height="52dp"
                            android:hint="ContraseÃ±a" android:inputType="textPassword"
                            android:background="@drawable/bg_input_light"
                            android:paddingHorizontal="16dp" android:textColor="#111827"
                            android:textColorHint="#9CA3AF"
                            android:gravity="center_vertical"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#FF5722"
                        app:hintEnabled="false">
                        <EditText android:id="@+id/regPassConfirm"
                            android:layout_width="match_parent" android:layout_height="52dp"
                            android:hint="Confirmar ContraseÃ±a" android:inputType="textPassword"
                            android:background="@drawable/bg_input_light"
                            android:paddingHorizontal="16dp" android:textColor="#111827"
                            android:textColorHint="#9CA3AF"
                            android:gravity="center_vertical"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- VerificaciÃ³n de identidad -->
                    <TextView android:text="VerificaciÃ³n de Identidad" android:textStyle="bold"
                        android:textColor="#111827" android:textSize="15sp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="Sube una imagen clara de tus documentos"
                        android:textSize="12sp" android:textColor="#64748B"
                        android:layout_marginTop="2dp" android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <RelativeLayout android:id="@+id/area_cedula"
                        android:layout_width="match_parent" android:layout_height="52dp"
                        android:background="@drawable/bg_input_light"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="10dp">
                        <TextView android:id="@+id/txt_nombre_cedula"
                            android:layout_width="wrap_content" android:layout_height="match_parent"
                            android:text="ðŸ“Ž Foto CÃ©dula *"
