            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="20dp" android:layout_marginTop="10dp">
                <Button android:id="@+id/btn_perfil_trabajar" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:text="Trabajar" android:backgroundTint="#00C853" android:layout_marginEnd="5dp" android:textAllCaps="false" app:cornerRadius="12dp" android:drawableStart="@drawable/buscarr"/>
