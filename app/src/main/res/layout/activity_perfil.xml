<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- HEADER DEGRADADO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF5722"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="28dp">

            <!-- Avatar circular -->
            <FrameLayout
                android:layout_width="96dp"
                android:layout_height="96dp">
                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFF"
                    android:padding="2dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/txt_nombre_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando..."
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/txt_correo_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#FFE0D4"
                android:textSize="13sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- TABS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tab_personal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Personal"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#FF6A00"/>

            <TextView
                android:id="@+id/tab_profesional"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Profesional"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="#E0E0E0"/>
        </LinearLayout>

        <!-- ═══ PANEL PERSONAL ═══ -->
        <LinearLayout
            android:id="@+id/layout_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView android:text="Información Personal"
                        android:textStyle="bold" android:textSize="16sp"
                        android:textColor="#111827"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <!-- Teléfono -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal" android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <ImageView android:layout_width="20dp" android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_call"
                            app:tint="#FF5722" android:layout_marginEnd="12dp"/>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView android:text="Teléfono" android:textColor="#64748B"
                                android:textSize="11sp"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/txt_telefono_usuario"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="—" android:textColor="#111827" android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Ciudad -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal" android:gravity="center_vertical">
                        <ImageView android:layout_width="20dp" android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_mapmode"
                            app:tint="#FF5722" android:layout_marginEnd="12dp"/>
                        <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                            android:layout_height="wrap_content" android:orientation="vertical">
                            <TextView android:text="Ubicación" android:textColor="#64748B"
                                android:textSize="11sp"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/txt_ciudad_usuario"
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="—" android:textColor="#111827" android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Descripción -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView android:text="Descripción"
                        android:textStyle="bold" android:textSize="16sp"
                        android:textColor="#111827" android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txt_descripcion_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sin descripción"
                        android:textColor="#374151"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- ═══ PANEL PROFESIONAL ═══ -->
        <LinearLayout
            android:id="@+id/layout_profesional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView android:text="Información Profesional"
                        android:textStyle="bold" android:textSize="16sp"
                        android:textColor="#111827" android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                    <TextView android:text="Esta sección mostrará tus habilidades,\ncalificaciones y trabajos completados."
                        android:textColor="#64748B" android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- BARRA NAVEGACIÓN INFERIOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="12dp"
            android:layout_marginTop="16dp">

            <LinearLayout android:id="@+id/nav_inicio" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent" android:orientation="vertical"
                android:gravity="center" android:clickable="true" android:focusable="true">
                <ImageView android:layout_width="22dp" android:layout_height="22dp"
                    android:src="@android:drawable/ic_menu_compass" app:tint="#94A3B8"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Inicio" android:textSize="10sp" android:textColor="#94A3B8"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/nav_buscar" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent" android:orientation="vertical"
                android:gravity="center" android:clickable="true" android:focusable="true">
                <ImageView android:layout_width="22dp" android:layout_height="22dp"
                    android:src="@android:drawable/ic_menu_search" app:tint="#94A3B8"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Buscar" android:textSize="10sp" android:textColor="#94A3B8"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/nav_publicaciones" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent" android:orientation="vertical"
                android:gravity="center" android:clickable="true" android:focusable="true">
                <ImageView android:layout_width="22dp" android:layout_height="22dp"
                    android:src="@android:drawable/ic_menu_agenda" app:tint="#94A3B8"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Mis Trabajos" android:textSize="10sp" android:textColor="#94A3B8"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/nav_chat" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent" android:orientation="vertical"
                android:gravity="center" android:clickable="true" android:focusable="true">
                <ImageView android:layout_width="22dp" android:layout_height="22dp"
                    android:src="@android:drawable/ic_menu_send" app:tint="#94A3B8"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Chat" android:textSize="10sp" android:textColor="#94A3B8"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/nav_perfil" android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent" android:orientation="vertical"
                android:gravity="center" android:clickable="true" android:focusable="true">
                <ImageView android:layout_width="22dp" android:layout_height="22dp"
                    android:src="@android:drawable/ic_menu_myplaces" app:tint="#FF5722"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Perfil" android:textSize="10sp" android:textColor="#FF5722"
                    android:textStyle="bold" android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>