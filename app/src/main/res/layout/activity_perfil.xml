                    <EditText android:layout_width="match_parent" android:layout_height="45dp" android:hint="50,000" android:background="@drawable/input_perfil_gris" android:paddingHorizontal="12dp" android:layout_marginBottom="15dp" android:textSize="14sp"/>

                    <TextView android:text="Habilidades" android:textColor="#FF6A00" android:textStyle="bold" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
                    <com.google.android.material.chip.ChipGroup android:layout_width="match_parent" android:layout_height="wrap_content" app:chipSpacingHorizontal="6dp">
                        <com.google.android.material.chip.Chip android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MecÃ¡nica"/>
                        <com.google.android.material.chip.Chip android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PlomerÃ­a"/>
